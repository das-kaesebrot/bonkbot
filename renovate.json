{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
      "config:base"
    ],
    "stabilityDays": 7,  
    "lockFileMaintenance": {
      "enabled": true,
      "automerge": true
    },  
    "packageRules": [
      {
        "matchUpdateTypes": ["patch"],
        "matchCurrentVersion": "!/^0/",
        "automerge": true
      }
    ]
  }
  